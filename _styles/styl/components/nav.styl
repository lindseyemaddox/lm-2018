
nav-list-view()

  .copyline
    color: $white
    height: 20px

  .nav-items
    margin-left: 10px

    .dropdown
      display: inline-block
      width: 100%
      height: 40px

    a[class^="icon-"]
      display: block
      font-size: 5em
      line-height: 57px
      margin: 0 auto

    a.icon-email
      padding-top: 30px

    a
      cursor: pointer
      text-decoration: none

      span
        display: inline-block

        &.map
          font-size: 15px
          margin-right: 0
          vertical-align: middle
          line-height: 1.4em

      &:hover span
        color: $green

      .list-item
        opacity: 1
        display: inline
        margin-left: 0
        position: inherit
        height: inherit
        line-height: 1em
        background-color: transparent
        padding: inherit

        span
          padding-left: 51px

    [class^="list"] input:checked

      & ~ .sub
        height: 40px
        margin-bottom: 10px

        &:last-child
          margin-bottom: 27px

        &.phones
          margin-bottom: 20px
          height: auto

          a
            line-height: 1em

        &.form
          height: auto//needs a px value
          padding-left: 70px

        &.socials
          height: 60px

      & ~ .icon-dropdown
        transition: 250ms
        transform: rotate(180deg)

  [class^="list"] label
    display: inline-block


.nav-pane .nav-items
  margin: 140px auto 0
  letter-spacing: 4px

  @media screen and (max-height: 700px)
    margin-top: 80px

  .sub.phones
    a,p,h1,h2
      font-size: 15px
      height: auto
      text-decoration: none
      color: $black
      padding-bottom: 3px
      text-align: center
      text-transform: uppercase
      primary-font($light)

    h1
      font-size: 32px

    h2
      font-size: 20px
      line-height: 28px
      padding: 18px 0

  a
    display: block
    text-align: center
    font-size: 3.5em
    height: 63px

    &:before
      font-size: 0.5em

    &:not(.sub), &:not(.sub a)
      margin-bottom: 10px
      position: relative

      span
        position: absolute
        top: 1em
        left: 80px

    &:before
      vertical-align: middle

    .list-item
      font-size: 0.35em
      vertical-align: middle
      height: 0
      padding-left: 0.35em
      text-transform: uppercase
      primary-font($light)
      line-height: 1em

    &.sub
      font-size: 2em
      margin-left: 0.65em
      cursor: pointer

      span
        padding-left: .75em
        font-size: .475em

[class^="list"]
  position: relative

  input.droppers
    position: absolute
    left:-99999px
    top: -99999px

  label
    position: absolute
    cursor: pointer
    z-index: 1
    width: 40px
    right: 15px
    top: 0
    padding-left: 0
    height: 40px

.nav-pane
  transition: 250ms
  position: fixed
  transform: translateX(0px)
  top: 0
  height: 100vh
  right: -150px
  width: 75px
  // overflow: hidden
  nav-icon-view()

  &.home
    background-color: transparent

    .nav-items a

      label:hover .dropdown span.bar
        background: $green

      &:hover:before
        color: $green

      &:before
        color: $black

      span
        color: $black

      .dropdown span.bar
        background: $white

    [class^="icon-"]
      display: none

  &.open
    transform: translateX(-148px)
    transition: 250ms
    width: 272px
    background-color: rgba($white, 0.9)
    box-shadow: 0px 3px 10px rgba($black, 0.2)
    nav-list-view()

.nav-pane.open .nav-items
  .socials
    position: absolute
    bottom: 10vh
    width: 100%

.toggle-nav
  cursor: pointer
  text-align: center
  primary-font($primary-font-light)
  position: fixed
  right: 11px

  span.c
    margin-left: 10px

  span.c, span.o, span.n, span.a, span.b, span.t
    display: inline-block
    font-size: 24px
    opacity: 0
    transition: 250ms
    letter-spacing: 1px
    vertical-align: middle

  span.e
    display: inline-block
    height: 14px
    width: 20px
    vertical-align: middle
    margin: 0 2px

    &.btn-close
      span.bar:nth-child(1)
        transition: 250ms
        transform: rotate(45deg)
        top: 6px
      span.bar:nth-child(2)
        opacity: 0
        transition: 250ms
      span.bar:nth-child(3)
        transition: 250ms
        transform: rotate(-45deg)
        bottom: 6px

    span.bar
      transition: 250ms
      position: relative
      display: block
      background: $green
      border-radius: 1px
      border-bottom: 1.8px solid $green
      width: 20px
      height: 2.5px

      &:nth-child(2)
        margin: 3.6px 0

  &:hover
    span.c, span.o, span.n, span.a, span.b, span.t
      opacity: 1
      transition: 250ms
      color: $green
    span.e span.bar
      background-color: $green
      border-bottom-color: $green

  &.open
    span.c, span.o, span.n, span.a, span.b, span.t
      opacity: 0
      transition: opacity 400ms ease-out

input:checked ~ [class^="icon"]

  span.bar:nth-child(1)
    transition: 250ms
    transform: rotate(45deg)
    transform-origin: center center
    margin: 0px 1px 21.5px 20px

  span.bar:nth-child(2)
    transition: 250ms
    transform: rotate(-45deg)
    transform-origin: center center
    margin: 0px 0px 21px -2px

.dropdown

  span.bar
    transition: 250ms
    display: inline-block
    background: $green
    height: 20px
    width: 1px

  span.bar:nth-child(1)
    transition: 250ms
    transform: rotate(-40deg)
    transform-origin: center center
    margin: 0 14px 21.5px 14px

  span.bar:nth-child(2)
    transition: 250ms
    transform: rotate(40deg)
    transform-origin: center center
    margin: 0px 0px 21.5px -2px
