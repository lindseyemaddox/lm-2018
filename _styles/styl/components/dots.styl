
.scroll-indicatory
  bottom: 40px
  position: absolute
  text-align: center
  width: 100%

  .dot
    animation: dot 13s 3s infinite ease-in-out
    background-color: rgba($white, .5) /* Dim all but first */
    border: 1px solid $white
    border-radius: 10px
    display: inline-block
    height: 12px
    margin: 0 10px
    opacity: 1
    text-align: center
    text-decoration: none
    transition: background-color .3s ease
    width: 12px

.scroll-indicatory >*:nth-child(1)
  animation-delay: 3.25s
  background: $green

.scroll-indicatory >*:nth-child(2)
  animation-delay: 3.5s

.scroll-indicatory >*:nth-child(3)
  animation-delay: 3.75s

.scroll-indicatory >*:nth-child(4)
  animation-delay: 4s

#s1:target ~ .scroll-indicatory
  >*:nth-child(1)
    background: $green
  >*:not(:nth-child(1))
    background: rgba($white, 0.5)

#s2:target ~ .scroll-indicatory
  >*:nth-child(2)
    background: $green
  >*:not(:nth-child(2))
    background: rgba($white, 0.5)

#s3:target ~ .scroll-indicatory
  >*:nth-child(3)
    background: $green
  >*:not(:nth-child(3))
    background: rgba($white, 0.5)

#s4:target ~ .scroll-indicatory
  >*:nth-child(4)
    background: $green
  >*:not(:nth-child(4))
    background: rgba($white, 0.5)

.scroll-indicatory .dot:hover
  background: rgba($white, 1)!important
  opacity: 1!important
  transform: none!important


@keyframes dot
  0%
    opacity: 1

  5%
    transform: scale(.75)
    opacity: .75

  15%
    transform: scale(1)
    opacity: 0

  20%
    transform: scale(.75)
    opacity: .75

  31%
    opacity: 1
