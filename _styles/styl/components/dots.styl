
.scroll-indicator
  bottom: 0
  width: 100%
  margin: 0 auto
  position: absolute
  text-align: center

  .dot
    width: 12px
    height: 12px
    display: inline-block
    border-radius: 10px
    border: 1px solid $white
    margin-left: auto
    margin-right: auto
    animation: dot 13s 3s infinite ease-in-out
    opacity: 1
    margin: 0 10px
    text-decoration: none
    text-align: center
    transition: background-color 0.3s ease
    background-color: rgba($white, 0.5) /* Dim all but first */

.scroll-indicator >*:nth-child(1)
  animation-delay: 3.25s
  background: $green

.scroll-indicator >*:nth-child(2)
  animation-delay: 3.5s

.scroll-indicator >*:nth-child(3)
  animation-delay: 3.75s

.scroll-indicator >*:nth-child(4)
  animation-delay: 4s

#s1:target ~ .scroll-indicator
  >*:nth-child(1)
    background: $green
  >*:not(:nth-child(1))
    background: rgba($white, 0.5)

#s2:target ~ .scroll-indicator
  >*:nth-child(2)
    background: $green
  >*:not(:nth-child(2))
    background: rgba($white, 0.5)

#s3:target ~ .scroll-indicator
  >*:nth-child(3)
    background: $green
  >*:not(:nth-child(3))
    background: rgba($white, 0.5)

#s4:target ~ .scroll-indicator
  >*:nth-child(4)
    background: $green
  >*:not(:nth-child(4))
    background: rgba($white, 0.5)

.scroll-indicator .dot:hover
  background: rgba($white, 1)!important
  opacity: 1!important
  transform: none!important


@keyframes dot
  0%
    opacity: 1

  5%
    transform: scale(.75)
    opacity: .75

  15%
    transform: scale(1)
    opacity: 0

  20%
    transform: scale(.75)
    opacity: .75

  31%
    opacity: 1
