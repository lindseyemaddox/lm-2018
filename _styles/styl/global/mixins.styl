
button(w)
  background-color: $green
  border: 0
  color: $white
  display: block
  font-size: 13px
  letter-spacing: 2px
  margin-top: 15px
  max-width: 260px
  outline: 0
  padding: 1.2em 0
  primary-font($semibold)
  text-align: center
  text-transform: uppercase
  transition: all ease 400ms
  width: w

  &:after
    content: '\e900'
    font-family: 'knockout'
    font-size: 14px
    padding-left: 10px
    vertical-align: bottom

  &:hover
    background-color: $orange
    cursor: pointer
