
.overlay
  color: $white
  padding: 60px 37px

  .headline
    primary-font($semibold)
    font-size: 2.25em
    line-height: 1em
    text-transform: uppercase
    letter-spacing: 5px
    white-space: nowrap

    span
      vertical-align: middle

  .subhead
    primary-font($semibold)
    font-size: 1.625em
    letter-spacing: 4px
    margin-top: 55px
    text-transform: uppercase

  .section-head
    primary-font($semibold)
    font-size: 1.275em
    line-height: 1.1860465116279069em
    letter-spacing: 3px
    margin: 22px 0 16px
    text-transform: uppercase

  p
    primary-font($regular)
    font-size: 1em
    line-height: 1.4545454545454546em
    padding-bottom: 20px

  .heading
    primary-font($light)
    font-size: 1em
    line-height: 1.4545454545454546em
    padding-bottom: 0

  .italic
    font-style: italic

  .button
    button(300px)
    float: none
    margin: 25px auto 0


  &.rates

    .subhead,
    .section-head,
    .heading,
    p
      text-align: center

    .section-head
      padding-bottom: 0

    p
      padding-bottom: 5px


  &.map

    .button
      margin-top: -100px

    img
      width: 100%
